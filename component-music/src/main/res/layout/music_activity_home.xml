<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MusicMainActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_music_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/music_main_tab_height" />

    <RelativeLayout
        android:id="@+id/rl_music_controller_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tl_music_main" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_music_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/music_main_tab_height"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
