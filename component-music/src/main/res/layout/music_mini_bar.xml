<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="@dimen/music_minibar_height"
    tools:ignore="ContentDescription"
    tools:parentTag="android.widget.RelativeLayout">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/music_minibar_cover_btn_size"
        android:layout_height="@dimen/music_minibar_cover_btn_size"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/m16"
        android:layout_marginBottom="@dimen/music_minibar_bottom_margin"
        android:src="@drawable/music_minibar_default_img" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/m16"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="@dimen/m16"
        android:layout_marginBottom="16dp"
        android:layout_toStartOf="@+id/ll_btn_container"
        android:layout_toEndOf="@+id/iv_cover"
        android:text="歌曲名称"
        android:textSize="14dp" />


    <LinearLayout
        android:id="@+id/ll_btn_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/m8"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_play_state"
            android:layout_width="@dimen/music_minibar_action_btn_size"
            android:layout_height="@dimen/music_minibar_action_btn_size"
            android:layout_marginEnd="@dimen/m16"
            android:background="@drawable/minibar_circle"
            android:src="@drawable/minibar_btn_play" />

        <ImageView
            android:id="@+id/iv_play_list"
            android:layout_width="@dimen/music_minibar_action_btn_size"
            android:layout_height="@dimen/music_minibar_action_btn_size"
            android:layout_marginEnd="@dimen/m16"
            android:src="@drawable/minibar_btn_playlist_highlight" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/divider_color" />

</merge>