<resources>

    <style name="ImageSplashTheme" parent="SplashTheme">

        <item name="android:windowBackground">@drawable/image_bg_image_launch</item>

    </style>

    <style name="image_setting_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/image_setting_btn_selector</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">@dimen/m16</item>
        <item name="android:paddingTop">@dimen/m8</item>
        <item name="android:paddingRight">@dimen/m16</item>
        <item name="android:paddingBottom">@dimen/m8</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/f14</item>
    </style>

    <style name="image_setting_label">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/m16</item>
        <item name="android:paddingTop">@dimen/m8</item>
        <item name="android:paddingRight">@dimen/m16</item>
        <item name="android:paddingBottom">@dimen/m8</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>
