<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:background="@android:color/holo_green_light"
    app:rpl_percentage="0.2453"
    app:rpl_rage="1.28"
    tools:ignore="ContentDescription"
    tools:parentTag="com.rainmonth.common.widgets.test.RandyPercentageLayout">

    <com.rainmonth.common.widgets.test.BorderRoundItemView
        android:id="@+id/border_round_item_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:borderRoundItemViewBorderEnabled="true"
        app:borderRoundItemViewWidthPercentage="-1" />

    <!--采用ViewStub实现-->
    <FrameLayout
        android:id="@+id/fl_redirect_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/image_book_item_view_redirect_bg"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/iv_redirect_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/image_ic_book_item_view_add" />
    </FrameLayout>

</merge>