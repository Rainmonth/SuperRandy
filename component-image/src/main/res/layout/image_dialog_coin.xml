<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_coin_wing_left"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginRight="150dp"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/image_app_name"
        app:srcCompat="@drawable/image_coin_wing_left" />

    <ImageView
        android:id="@+id/iv_coin_wing_right"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/image_app_name"
        app:srcCompat="@drawable/image_coin_wing_right" />

    <ImageView
        android:id="@+id/iv_coin_crown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="140dp"
        android:contentDescription="@string/image_app_name"
        app:srcCompat="@drawable/image_coin_crown" />

    <ImageView
        android:id="@+id/iv_coin"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/image_app_name"
        app:srcCompat="@drawable/image_coin_coin" />

    <TextView
        android:id="@+id/tv_coin_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="220dp"
        android:text="+1000"
        android:textColor="#fff5a1"
        android:textSize="40dp"
        android:textStyle="bold" />
</FrameLayout>