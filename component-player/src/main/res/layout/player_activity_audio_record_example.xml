<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/tv_start_record"
        style="@style/GreenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始录音"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_stop_record"
        style="@style/RedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="结束录音"
        app:layout_constraintStart_toEndOf="@+id/tv_start_record"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_start_record1"
        style="@style/GreenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="MediaRecorder\n开始录音"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_start_record" />

    <TextView
        android:id="@+id/tv_stop_record1"
        style="@style/RedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="MediaRecorder\n结束录音"
        app:layout_constraintStart_toEndOf="@+id/tv_start_record1"
        app:layout_constraintTop_toTopOf="@+id/tv_start_record1" />

    <TextView
        android:id="@+id/tv_start_record2"
        style="@style/GreenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="AudioTrack\n开始录音"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_start_record1" />

    <TextView
        android:id="@+id/tv_stop_record2"
        style="@style/RedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="AudioTrack\n结束录音"
        app:layout_constraintStart_toEndOf="@+id/tv_start_record2"
        app:layout_constraintTop_toTopOf="@+id/tv_start_record2" />


</androidx.constraintlayout.widget.ConstraintLayout>