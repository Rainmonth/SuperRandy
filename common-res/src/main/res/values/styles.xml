<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="PullToRefresh">

        <attr name="ptrRefreshableViewBackground" format="reference|color" />
        <attr name="ptrHeaderBackground" format="reference|color" />
        <attr name="ptrHeaderTextColor" format="reference|color" />
        <attr name="ptrHeaderSubTextColor" format="reference|color" />
        <attr name="ptrMode">
            <flag name="disabled" value="0x00000000" />
            <flag name="pullFromStart" value="0x00000001" />
            <flag name="pullFromEnd" value="0x00000002" />
            <flag name="both" value="0x00000003" />
            <flag name="manualOnly" value="0x00000004" />
            <flag name="pullDownFromTop" value="0x00000001" />
            <flag name="pullUpFromBottom" value="0x00000002" />
        </attr>
        <attr name="ptrShowIndicator" format="reference|boolean" />
        <attr name="ptrDrawable" format="reference" />
        <attr name="ptrDrawableStart" format="reference" />
        <attr name="ptrDrawableEnd" format="reference" />
        <attr name="ptrOverScroll" format="reference|boolean" />
        <attr name="ptrHeaderTextAppearance" format="reference" />
        <attr name="ptrSubHeaderTextAppearance" format="reference" />
        <attr name="ptrAnimationStyle">
            <flag name="rotate" value="0x00000000" />
            <flag name="flip" value="0x00000001" />
            <flag name="rotate_and_anim" value="0x00000002" />
        </attr>
        <attr name="ptrScrollingWhileRefreshingEnabled" format="reference|boolean" />
        <attr name="ptrListViewExtrasEnabled" format="reference|boolean" />
        <attr name="ptrRotateDrawableWhilePulling" format="reference|boolean" />
        <attr name="ptrAdapterViewBackground" format="reference|color" />
        <attr name="ptrDrawableTop" format="reference" />
        <attr name="ptrDrawableBottom" format="reference" />
    </declare-styleable>

    <style name="green_trans_btn" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">@dimen/m16</item>
        <item name="android:layout_marginRight">@dimen/m16</item>
        <item name="android:layout_marginTop">@dimen/m8</item>
        <item name="android:layout_marginBottom">@dimen/m8</item>
        <item name="android:paddingTop">@dimen/m8</item>
        <item name="android:paddingBottom">@dimen/m8</item>
        <item name="android:background">@drawable/selector_green_btn</item>
    </style>

</resources>
